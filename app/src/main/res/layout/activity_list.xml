<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="방 목록"
        android:textSize="30sp"
        android:id="@+id/text_list_title"/>
    
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/listview_room"
        app:layout_constraintTop_toBottomOf="@id/text_list_title"
        app:layout_constraintBottom_toTopOf="@id/btn_create"></ListView>

    <Button
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:id="@+id/btn_create"
        android:background="@drawable/create_room"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_refresh"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:id="@+id/btn_refresh"
        android:background="@drawable/refresh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_create"/>

</android.support.constraint.ConstraintLayout>