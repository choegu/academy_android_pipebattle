<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <GridView
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:id="@+id/gridView_enemy_game"
        android:numColumns="7"
        android:padding="0dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/text_game_player1"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:id="@+id/text_game_player1"
        android:text="player1"
        android:textSize="20sp"
        android:padding="0dp"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:minLines="1"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/gridView_attack_item"
        app:layout_constraintLeft_toRightOf="@id/gridView_enemy_game"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:id="@+id/text_game_vs"
        android:text="VS"
        android:textSize="20sp"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:maxLines="1"
        android:minLines="1"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@id/gridView_attack_item"
        app:layout_constraintLeft_toRightOf="@id/gridView_enemy_game"
        app:layout_constraintTop_toBottomOf="@id/text_game_player1"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:id="@+id/text_game_player2"
        android:text="player2"
        android:textSize="20sp"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:maxLines="1"
        android:minLines="1"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/text_game_vs"
        app:layout_constraintRight_toLeftOf="@id/gridView_attack_item"
        app:layout_constraintLeft_toRightOf="@id/gridView_enemy_game"/>

    <GridView
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:id="@+id/gridView_attack_item"
        android:numColumns="2"
        android:padding="0dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toRightOf="@id/text_game_player1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <GridView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:id="@+id/gridView_main_game"
        android:numColumns="7"
        android:padding="0dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gridView_enemy_game"/>

    <GridView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/gridView_next_tile"
        android:numColumns="6"
        android:padding="0dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gridView_main_game"/>

</android.support.constraint.ConstraintLayout>