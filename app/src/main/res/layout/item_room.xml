<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="20sp"
        android:id="@+id/room_num"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방 제목"
        android:textSize="20sp"
        android:id="@+id/room_title"
        app:layout_constraintLeft_toRightOf="@id/room_num"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방 생성자"
        android:id="@+id/room_creator"
        app:layout_constraintTop_toBottomOf="@id/room_title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/5"
        android:id="@+id/room_player_num"
        app:layout_constraintTop_toBottomOf="@id/room_creator"/>


</android.support.constraint.ConstraintLayout>