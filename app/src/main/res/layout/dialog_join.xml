<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID"
        android:id="@+id/join_edit_id"
        android:maxLines="1"
        android:minLines="1"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PASSWORD"
        android:id="@+id/join_edit_password"
        android:maxLines="1"
        android:minLines="1"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/join_edit_id"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="RE_PASSWORD"
        android:id="@+id/join_edit_re_password"
        android:maxLines="1"
        android:minLines="1"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/join_edit_password"/>

</android.support.constraint.ConstraintLayout>